<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Kanban" %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag "application" %>
  </head>

  <body v-bind:style="{ backgroundColor: '#' + currentBoard.background_color }">
    <%= partial "views/shared/settings" %>
    <%= partial "views/shared/menu" %>
    <%= partial "views/shared/header" %>

    <div class="container-fluid main-container">
      <div class="overflow">
        <div class="row-fluid">
          <board></board>
        </div>
      </div>
    </div>

    <%= partial "views/shared/modal" %>
    <%= javascript_include_tag  "application" %>
  </body>
</html>