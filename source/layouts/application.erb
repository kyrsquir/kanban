<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Kanban" %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag "application" %>
  </head>

  <body v-bind:style="{ backgroundColor: '#' + currentBoard.background_color }">
    <settings :show-settings.sync="showSettings" :current-board.sync="currentBoard" :update="updateCurrentBoard"></settings>
    <menu-component :set-current-board="setCurrentBoard" :show-menu="showMenu" :boards.sync="boards" :api="api"></menu-component>
    <header-component :show-settings.sync="showSettings" :show-menu.sync="showMenu" :current-board="currentBoard"></header-component>

    <div class="container-fluid main-container">
      <div class="overflow">
        <div class="row-fluid flexbox">
          <lists :update="updateCurrentBoard" :lists="currentBoard.lists" :api="api" :user="currentUser"></lists>
        </div>
      </div>
    </div>

    <%= javascript_include_tag  "application" %>
  </body>
</html>